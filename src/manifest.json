{
	"name": "Amazon Tag Remover",
	"version": "0.5.1",
	"minimum_chrome_version": "68",
	"manifest_version": 2,
	"author": "Tim 'timbru31' Brust",
	"description": "Remove the Amazon affiliate tracking ID (tag) from amazon links",
	"background": {
		"scripts": ["js/background.js"]
	},
	"options_ui": {
		"page": "options.html"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"notifications",
		"storage",
		"*://*.amazon.at/*",
		"*://*.amazon.ca/*",
		"*://*.amazon.cn/*",
		"*://*.amazon.co.jp/*",
		"*://*.amazon.co.uk/*",
		"*://*.amazon.com.au/*",
		"*://*.amazon.com.br/*",
		"*://*.amazon.com.mx/*",
		"*://*.amazon.com.tr/*",
		"*://*.amazon.com/*",
		"*://*.amazon.de/*",
		"*://*.amazon.es/*",
		"*://*.amazon.fr/*",
		"*://*.amazon.ie/*",
		"*://*.amazon.in/*",
		"*://*.amazon.it/*",
		"*://*.amazon.nl/*"
	],
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"64": "images/icon64.png",
		"128": "images/icon128.png"
	}
}
